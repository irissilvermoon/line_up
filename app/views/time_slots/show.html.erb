<h1>Time Slot</h1>

<div class="row">
  <div class="small-6 columns">
    <li>
      <b> DJs </b>
        <% @djs.each do |dj| %>
        <%= link_to dj.dj_name, club_night_dj_path(@club_night, dj) %>
        <% end %>
    <li>
      <b>Genres:</b>
        <%= @time_slot.genres %>
    </li>
    <li>
      <b>Start Time </b>
        <%= @time_slot.start_time.to_s(:club_time) %>
    </li>
    <li>
      <b>End Time </b>
        <%= @time_slot.end_time.to_s(:club_time) %>
      </li>
  </div>
</div>

<%= link_to "Add new DJ to Time Slot", new_time_slot_booking_path(@time_slot, @booking) %> |
<%= link_to "Back to #{@event.name}", club_night_event_path(@club_night, @event) %> |
<%= link_to "Edit Time Slot", edit_club_night_event_time_slot_path(@club_night, @event, @time_slot) %> |
<%= link_to "Delete Time Slot", club_night_event_time_slot_path(@club_night, @event, @time_slot),
                                method: :delete, data: { confirm: "Are you sure you want to delete time slot?"} %>


