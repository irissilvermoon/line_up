<%= simple_form_for(@club_night, html: {:class => 'large-4'}) do |f| %>
	<%= f.input :name, label: "Club Night Name" %>
	<%= f.input :venue %>
	<%= f.input :genres %>
	<%= f.input :start_time, as: :time %>
	<%= f.input :end_time, as: :time %>
	<%= f.input :notes %>
	<%= f.button :submit %>
<% end %>
